<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Settings">


    <TextView
        android:id="@+id/Size_Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/stand_margin"
        android:paddingTop="@dimen/stand_margin"
        android:textSize="@dimen/big_text"
        android:text="@string/change_text_size"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/text_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/stand_margin"
        android:paddingBottom="@dimen/setting_pad"
        android:max="@integer/alter_font_size"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/Colour_Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/stand_margin"
        android:paddingTop="@dimen/stand_margin"
        android:textSize="@dimen/big_text"
        android:text="@string/change_colour"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/colour_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/setting_pad"
        android:thumbTint="@color/red"
        android:progressTint="@color/red"
        android:max="@integer/colour_limit"/>


    <TextView
        android:id="@+id/sample_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/setting_pad"
        android:paddingLeft="@dimen/stand_margin"
        android:text="@string/sample_text"
        android:textStyle="bold"/>

</LinearLayout>
